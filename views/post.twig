<div class="container-fluide">
    {% for post in posts %}
        <div class="row flex center">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <h2>Voici l'article nÂ°{{ post.id }}</h2>
                <br>
                {% if post.id_auteur == session %}
                    <a href="/blog/public/modify-post/{{ post.id }}">
                        <button>Modifier cet article</button>
                    </a><br><br>
                    <a href="/blog/public/delete-post/{{ post.id }}">
                        <button>Supprimer cet article</button>
                    </a>
                {% endif %}
            </div>
        </div>

        <br>
        <br>

        <div class="row flex">
            <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3"></div>
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <p>{{ post.titre }}</p>
                <p>{{ post.chapo }}</p>
                <p>{{ post.contenu }}</p>
                <p>{{ post.date_creation }}</p>
                <p>{{ post.date_modification }}</p>
                <p>{{ post.auteur }}</p>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3"></div>
            
        </div>

        {% if session != NULL %}
            <br><br><br><br>
            <div class="row flex">
                <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3"></div>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                        <h4>Laissez-nous votre avis sur cet article</h4>
                        <form action="/blog/public/add-commentaire/{{ post.id }}" method="post">
                            <textarea name="commentaire" cols="100" rows="3" wrap="soft" required></textarea>
                            <br />
                        <input type="submit" name="envoyer" value="Publier" />
                    </form>
                            

                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3"></div>
            </div>
        {% endif %}

        <br>
        <br>

        <div class="row flex">
            <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3"></div>
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                {% if comments is iterable %}
                    {% for comment in comments %}
                        <p>{{ comment.id_commentaire }}</p>
                        <p>{{ comment.date_creation }}</p>
                        <p>{{ comment.date_modification }}</p>
                        <p>{{ comment.message }}</p>
                        <p>{{ comment.auteur }}</p>
                        <p>{{ comment.id_auteur }}</p>
                        <br>
                        {% if comment.id_auteur == session_id %}
                            <a href="/blog/public/modify-comment/{{ post.id }}-{{ comment.id_commentaire }}">
                                <button>Modifier</button>
                            </a><br>
                            <a href="/blog/public/delete-comment/{{ post.id }}-{{ comment.id_commentaire }}">
                                <button>Supprimer</button>
                            </a>
                        {% endif %}
                    {% endfor %}    

                {% else %}
                    {% if session_id != NULL %}
                        <p>{{ comments }}</p>
                    {% endif %}
                {% endif %}
                <hr>
            </div>
            
            <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3"></div>
            
        </div>

    {% endfor %}
</div>

