<div class="container-fluide">
    {% for post in posts %}
        <div class="row flex">
            <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3"></div>

            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <form action="/blog/public/delete-post-confirm/{{ post.id }}" method="post">
                    <input type="hidden" name="token" value="{{session_token}}">
                    <div>Etes-vous s√ªr de vouloir supprimer cet article ?</div>
                    <br>
                    <br>
                    <div><b>{{ post.titre }}</b></div>
                    <br>
                    <br>
                    <input type="submit" name="envoyer" value="OUI" />
                    <input type="button" name="retour" value="NON" onclick="history.back()" />
                </form>
            </div>

            <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3"></div>
            
        </div>

        <div class="row flex">
            {% if result %}
                {{ result }}
            {% endif %}
        </div>
    {% endfor %}
</div>