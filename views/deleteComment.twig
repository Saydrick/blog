<div class="container-fluide">
    {% for post in post %}
        {% for comment in comment %}
            <div class="row flex">
                <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3"></div>

                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    <form action="/blog/public/delete-comment-confirm/{{ post.id }}-{{ comment.id_comment }}" method="post">
                        <div>Etes-vous s√ªr de vouloir supprimer votre commentaire ?</div>
                        <br>
                        <br>
                        <input type="submit" name="envoyer" value="OUI" />
                        <input type="button" name="retour" value="NON" onclick="history.back()" />
                    </form>
                </div>

                <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3"></div>
                
            </div>

            <div class="row flex">
                {% if result %}
                    {{ result }}
                {% endif %}
            </div>
        {% endfor %}
    {% endfor %}
