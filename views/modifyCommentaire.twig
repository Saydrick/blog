<div class="container-fluide">
    {% for article in articles %}
        <div class="row flex center">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <h2>Voici l'article nÂ°{{ article.id }}</h2>
                <br>
                {% if article.id_auteur == session %}
                    <a href="/blog/public/modify-post/{{ article.id }}">
                        <button>Modifier cet article</button>
                    </a><br><br>
                    <a href="/blog/public/delete-post/{{ article.id }}">
                        <button>Supprimer cet article</button>
                    </a>
                {% endif %}
            </div>
        </div>

        <br>
        <br>

        <div class="row flex">
            <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3"></div>
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <p>{{ article.titre }}</p>
                <p>{{ article.chapo }}</p>
                <p>{{ article.contenu }}</p>
                <p>{{ article.date_creation }}</p>
                <p>{{ article.date_modification }}</p>
                <p>{{ article.auteur }}</p>

                <hr>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3"></div>
            
        </div>

        <br>
        <br>

        {% for modify_commentaire in modify_commentaire %}
            <div class="row flex">
                <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3"></div>

                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    <form action="/blog/public/modify-commentaire-confirme/{{ article.id }}-{{ modify_commentaire.id_commentaire }}" method="post">
                        <textarea name="commentaire" cols="100" rows="3" wrap="soft" required>{{ modify_commentaire.message }}</textarea>
                        <br />
                        <input type="submit" name="envoyer" value="Modifier" />
                    </form>                

                    <p>{{ modify_commentaire.id_commentaire }}</p>
                    <p>{{ modify_commentaire.date_creation }}</p>
                    <p>{{ modify_commentaire.date_modification }}</p>
                    <p>{{ modify_commentaire.auteur }}</p>
                    <p>{{ modify_commentaire.id_auteur }}</p>
                    <hr>
                </div>
                
                <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3"></div>
            </div>

            <br>

            {% for commentaire in commentaires %}
                {% if commentaire.id_commentaire != modify_commentaire.id_commentaire %}
                    <div class="row flex">
                        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3"></div>
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                            <p>{{ commentaire.id_commentaire }}</p>
                            <p>{{ commentaire.date_creation }}</p>
                            <p>{{ commentaire.date_modification }}</p>
                            <p>{{ commentaire.message }}</p>
                            <p>{{ commentaire.auteur }}</p>
                            <p>{{ commentaire.id_auteur }}</p>
                            <hr>
                        </div>
                        
                        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3"></div>
                        
                    </div>
                {% endif %}
            {% endfor %}
        {% endfor %}
    {% endfor %}
</div>

